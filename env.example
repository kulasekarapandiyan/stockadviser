# Stock Advisor Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys (Required)
# Get Alpha Vantage API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Optional: Get Finnhub API key from: https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./stock_advisor.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/stock_advisor

# Application Settings
DEBUG=True
SECRET_KEY=your_secret_key_here_change_this_in_production

# Data Settings
DEFAULT_TIMEFRAME=1d
DEFAULT_PERIOD=1y
MAX_STOCKS_PER_PORTFOLIO=100

# Technical Analysis Settings
RSI_PERIOD=14
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BOLLINGER_PERIOD=20
BOLLINGER_STD=2

# Fundamental Analysis Settings
MIN_MARKET_CAP=1000000000
MAX_PE_RATIO=100
MIN_VOLUME=1000000

# ML Model Settings
PREDICTION_DAYS=30
CONFIDENCE_THRESHOLD=0.7
MODEL_UPDATE_FREQUENCY=1d

# Rate Limiting (API calls per minute)
ALPHA_VANTAGE_RATE_LIMIT=5
FINNHUB_RATE_LIMIT=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=stock_advisor.log

# CORS Settings (for production)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
